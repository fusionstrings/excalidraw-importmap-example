    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Launch Program",
            "type": "pwa-node",
            "program": "${workspaceFolder}/server.js",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--inspect",
                "--unstable",
                "--allow-net",
                "--allow-read",
                "--allow-env"
            ],
            "attachSimplePort": 9229
        }
    ]
}